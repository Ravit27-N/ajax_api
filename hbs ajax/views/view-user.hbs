<script type="text/javascript">
$("document").ready(function(){    
    
    //read all data 
    view_detail();
    
    function view_detail(){
        var id= localStorage.getItem('id')
        var data = {};
      $.ajax({
        url: 'http://localhost:5000/api/viewuser/'+id,     
        type: 'GET',
        contentType: 'application/json', 
        data: JSON.stringify(data),
        success: function(res) {
          console.log('success');
          console.log(JSON.stringify(res.rows));
          var temp = "" ;
          const data = res.rows;
            temp +="<tr>"
            temp +="<th scope='row'>"+ data[0].first_name  +"</td>"
            temp +="<td>"+ data[0].last_name +"</td>"
            temp +="<td>"+ data[0].email +"</td>"
            temp +="<td>"+ data[0].phone  +"</td>";
           console.log(data[0].comments);
          $("h3").append(data[0].first_name +" "+ data[0].last_name)
          $("tbody").append(temp);
          $(".com").append(data[0].comments);
        } //end success
      }); //end ajax

    }//end function
   
  }); // end document
</script>
